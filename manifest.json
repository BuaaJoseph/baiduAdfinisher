{
	"name": "百度广告屏蔽插件--by HKing",
	"version": "2.0",
	"description":"屏蔽百度线上产品页面广告(搜索、新闻、贴吧、知道、音乐、图片、视频、文库等),兼容国产(360、搜狗、猎豹、百度、UC、QQ等)以及其他webkit内核浏览器; 点击扩展图标打开(如果已打开则切换到)百度页面，可当书签用，省去每次输入地址的麻烦。",
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["https://www.baidu.com/*","http://*.baidu.com/*"],
			"css":["style.css"],
			"js":["jquery-1.7.2.min.js","main.js"],
			"run_at":"document_end"
		}
	],
	"permissions": [
		"https://*.baidu.com/*","tabs"
	],
	"icons": {
		"16": "icon_16.png",
		"48": "icon_48.png",
		"128": "icon_128.png"
	},
	"browser_action": {
		"name": "百度广告屏蔽插件--by HKing",
		"default_icon": "icon_128.png"
	},
	"web_accessible_resources": [
       "images/a.jpg",
	   "images/b.jpg",
	   "images/c.jpg",
	   "images/d.jpg",
	   "images/e.jpg"
    ],
	"manifest_version": 2
}
